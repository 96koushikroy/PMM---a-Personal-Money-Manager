
<div class="row">
    <div class="col-md-4 col-md-offset-1 col-sm-6 col-centered">
        {{#if message}}
            <div class="alert alert-danger">
                {{message}}
            </div>
        {{/if}}
        <div class="tile tile-login">
            <h3 class="text-center" style="color: white">Login</h3>

            <form action="/login" method="post">

                <div class="input-icon">
                    <span class="fa-user fa"></span>
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="input-icon">
                    <span class="fa-lock fa"></span>
                    <input type="password" class="form-control" name="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;">
                </div>
                <input type="submit" class="btn btn-block btn-primary btn-embossed" value="LOGIN">


            </form>

        </div>
    </div>

</div>
